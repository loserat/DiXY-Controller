# ═══════════════════════════════════════════════════════════════
# DIXY Controller – Secrets Template
# ═══════════════════════════════════════════════════════════════
# 
# SETUP ANLEITUNG:
# 1. Kopiere diese Datei: cp secrets.yaml.example secrets.yaml
# 2. Editiere secrets.yaml mit deinen ECHTEN Werten
# 3. NIEMALS secrets.yaml in Git committen!
# 
# Diese Datei ist ein TEMPLATE nur für Dokumentation.
# Die echten Werte gehören in secrets.yaml (in .gitignore)
# ═══════════════════════════════════════════════════════════════

# ===== WiFi Credentials =====
# Primäres WLAN für alle Nodes
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# ===== Fallback Access Points (pro Node) =====
# Falls Verbindung zum primären WLAN fehlschlägt
hydroknoten_ap_ssid: "HYDROKNOTEN_Fallback"
hydroknoten_ap_password: "fallback_password"

dosierung_ap_ssid: "DOSIERUNG_Fallback"
dosierung_ap_password: "fallback_password"

zeltsensor_ap_ssid: "ZELTSENSOR_Fallback"
zeltsensor_ap_password: "fallback_password"

klimaknoten_ap_ssid: "KLIMAKNOTEN_Fallback"
klimaknoten_ap_password: "fallback_password"

canopy_cam_ap_ssid: "CANOPY_CAM_Fallback"
canopy_cam_ap_password: "fallback_password"

detail_cam_ap_ssid: "DETAIL_CAM_Fallback"
detail_cam_ap_password: "fallback_password"

# ===== OTA Update Passwords =====
# Wichtig: Unterschiedliche Passwörter pro Node für Sicherheit
ota_password: "YOUR_OTA_PASSWORD"
hydroknoten_ota_password: "YOUR_OTA_PASSWORD"
dosierung_ota_password: "YOUR_OTA_PASSWORD"
zeltsensor_ota_password: "YOUR_OTA_PASSWORD"
klimaknoten_ota_password: "YOUR_OTA_PASSWORD"
camera_ota_password: "YOUR_OTA_PASSWORD"

# ===== Web Server Credentials =====
# Für ESPHome Web-Interface Zugriff
web_username: "admin"
web_password: "YOUR_WEB_PASSWORD"

# ===== ESPHome API Password =====
# Leer = API wird nur mit Encryption gesichert (empfohlen)
api_password: ""

# ===== Home Assistant Integration =====
# URL und Token für Native API Verbindung
ha_url: "http://192.168.1.100:8123"
ha_token: "YOUR_LONG_LIVED_ACCESS_TOKEN_HERE"

# So erstellst du einen Long-Lived Access Token in Home Assistant:
# 1. Home Assistant → Profile (unten links)
# 2. Scroll zu "Long-Lived Access Tokens"
# 3. "Create token" → gib einen Namen ein
# 4. Kopiere den Token hier rein
# 5. Speichere die Datei

# ===== MQTT Broker (optional) =====
# Falls du MQTT Automation verwenden möchtest
mqtt_broker: "192.168.1.100"
mqtt_port: 1883
mqtt_username: "mqtt_user"
mqtt_password: "mqtt_password"

# ===== InfluxDB Logging (optional) =====
# Für historische Daten und Graphing
influxdb_host: "192.168.1.100"
influxdb_port: 8086
influxdb_database: "dixy_rdwc"
influxdb_username: "dixy_user"
influxdb_password: "YOUR_PASSWORD_HERE"

# ===== Telegram Notifications (optional) =====
# Für Alarm-Benachrichtigungen auf dem Handy
telegram_bot_token: "YOUR_BOT_TOKEN_HERE"
telegram_chat_id: "YOUR_CHAT_ID_HERE"

# ===== SENSOR CALIBRATION VALUES (Referenz) =====
# Diese Werte sind für Dokumentation – echte Kalibrierung erfolgt in Home Assistant
ec_calibration_low: 1.413
ec_calibration_high: 12.88
ph_calibration_4: 4.0
ph_calibration_7: 7.0

# ===== API Keys (optional) =====
openweather_api_key: "YOUR_OPENWEATHER_KEY"
latitude: 52.5200
longitude: 13.4050
elevation: 34

# ═════════════════════════════════════════════════════════════════
